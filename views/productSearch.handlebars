
<h1>new Products page</h1>
{{#admin}}
<h3><a href="/products/add">Add a new products</a></h3>
{{/admin}}
<form role="form" action="/products/search/{{product_id}}" method="post">
  <input class="searchBar" type="text" name="search" placeholder="Search..">
  <input type="submit" name="Submit" value="Search"/>
</form>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Category</th>
        {{#admin}}
        <th>Edit item</th>
        <th>Delete item</th>
        {{/admin}}
    </tr>
    {{#each sea}}
        <tr>
            <td data-th="Product">{{product}}</td>
            <td data-th="Category">{{categoryName}}</td>
             {{#if../admin}}
            <td data-th="Edit item"><a href="/products/edit/{{product_id}}">Edit</a></td>
            <td data-th="Delete item"><a href="/products/delete/{{product_id}}">Delete</a></td>
            {{/if}}
        </tr>
    {{/products}}
</table>
