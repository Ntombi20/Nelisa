<h1>Categories</h1>
{{#admin}}
<h3><a href="/categories/add"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> a new Category</a></h3>
{{/admin}}
<form>
    <input class="seach" type="text" name="value"/>
</form>
<table>
  <thead>
    <tr>
        <th>Category</th>
        {{#admin}}
        <th>Edit item</th>
        <th>Delete item</th>
        {{/admin}}
    </tr>
  </thead>
  <tbody>
    {{#categories}}
        <tr>
            <td data-label="Category">{{categoryName}}</td>
            {{#if../admin}}
            <td data-label="Edit item"><a href="/categories/edit/{{id}}"><span class="glyphicon glyphicon-edit"></a></td>
            <td data-label="Edit delete"><a href="/categories/delete/{{id}}"><span class="glyphicon glyphicon-trash"></a></td>
            {{/if}}
        </tr>
    {{/categories}}
  </tbody>
</table>
<script type="text/javascript">

  $(document).ready(function(){
    $(".seach").keyup(function(){
      var url = '/categories/search';
      var searchItem = $(".seach").val();
      console.log(searchItem);
      $.ajax(url, {
        data: {
          value: searchItem
        },
        type: 'POST',
        success: function(response){
          console.log(response);
          $(".categoryTable").html(response);
        }

      });

    });
  });
</script>
