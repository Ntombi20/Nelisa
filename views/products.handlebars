<div class="table-responsive">
  <h1>Products</h1>
  <h3><a href="/products/add">Add</a></h3>
    <table class="table table-bordered myTable">
      <thead>
          <tr>
              <th>Id</th>
              <th>Product</th>
              <th>Category</th>
          </tr>
      </thead>
        {{#products}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{product}}</td>
                    <td>{{categoryName}}</td>
                    <td><a href="/products/edit/{{id}}">Edit</a></td>
                    <td><a href="/products/delete/{{id}}">Delete</a></td>
                </tr>
            </tbody>
            {{/products}}
    </table>
</div>
