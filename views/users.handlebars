<h1>Users</h1>
{{#admin}}
<h3><a href="/users/add"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> a new User</a></h3>
{{/admin}}
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Roles</th>
      {{#admin}}
      <th>Edit item</th>
      <th>Delete item</th>
      {{/admin}}
    </tr>
  </thead>
  <tbody>
    {{#users}}
        <tr>
            <td data-label="Username">{{username}}</td>
            <td data-label="Email">{{email}}</td>
            <td data-label="Roles">{{admin}}</td>
            {{#if../admin}}
            <td data-label="Edit item"><a href="/users/edit/{{id}}"><span class="glyphicon glyphicon-edit"></a></td>
            <td data-label="Edit delete"><a href="/users/delete/{{id}}"><span class="glyphicon glyphicon-trash"></a></td>
            {{/if}}
        </tr>
    {{/users}}
</table>
