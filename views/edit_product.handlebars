<h1>Edit product</h1>

<form action="/products/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Category</label>
		<select class="" name="category_id">
			{{#categories}}
				<option {{selected}} value="{{id}}">{{categoryName}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="">
		<label for="">Product</label>
		<input type="text" name="product" value="{{data.product}}">
	</div>
	<input type="submit">
</form>
